#!/bin/bash

path=$1
output=""

while true; do
	ls=$(ls -ald "$path")
	acl=${ls:10:1}
	fmt='%A'"${acl}"'\v%U(%u)\v%G(%g)\v%N'
	stat=$(stat --printf "$fmt" "$path")
	output="${output}\n${stat}"
	parent=$(dirname "$path")
	if [[ "$parent" == "$path" ]]; then
		break
	fi
	path="$parent"
done

echo -e "$output" | column -t -s $'\v'
